    <script>
        document.getElementById("confirmAddToCart").addEventListener("click", function () {
            const form = document.getElementById("addToCartForm");
            const messageBox = document.getElementById("addToCartMessage");

            const formatType = form.querySelector("[name='FormatType']").value;

                   const request = {
            BookId: form.querySelector("[name='BookId']").value,
            Quantity: parseInt(form.querySelector("[name='Quantity']").value),
            FormatType: formatType,
            Days: formatType.toLowerCase() === "borrow"
                ? parseInt(form.querySelector("[name='Days']").value) || 0
                : null
        };


            fetch('/Cart/AddItem', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(request)
            })
            .then(res => res.json())
            .then(data => {
                console.log("Response:", data);

                if (data.success) {
                    messageBox.innerHTML = `<div class="alert alert-success">✅ ${data.message}</div>`;

                    setTimeout(() => {
                        bootstrap.Modal.getInstance(document.getElementById("addToCartModal")).hide();
                        messageBox.innerHTML = "";
                    }, 1500);
                } else {
                    messageBox.innerHTML = `<div class="alert alert-danger">❌ ${data.message}</div>`;
                }
            })
            .catch(err => {
                console.error("Error:", err);
                messageBox.innerHTML = `<div class="alert alert-danger">⚠ Something went wrong</div>`;
            });
        });



    </script>
