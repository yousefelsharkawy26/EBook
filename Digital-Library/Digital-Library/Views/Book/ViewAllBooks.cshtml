<section class="hero-section position-relative padding-large" style="background-size: cover; background-repeat: no-repeat; background-position: center; height: 400px;">
    <div class="hero-content">
        <div class="container">
            <div class="row">
                <div class="text-center">
                    <h1>Shop</h1>
                    <div class="breadcrumbs">
                        <span class="item">
                            <a href="index.html">Home > </a>
                        </span>
                        <span class="item text-decoration-underline">Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="shopify-grid padding-large">
    <div class="container">
        <div class="row flex-row-reverse g-md-5">
            <main class="col-md-9">
                <div class="filter-shop d-flex flex-wrap justify-content-between mb-5">
                    <div class="showing-product">
                        <p>Showing 1–9 of 55 results</p>
                    </div>
                    <div class="sort-by">
                        <form method="get" id="sortForm">
                            <select id="sorting" name="sort" class="form-select" onchange="document.getElementById('sortForm').submit();">
                                <option value="">Default sorting</option>

                                @if (Context.Request.Query["sort"] == "NameAsc")
                                {
                                    <option value="NameAsc" selected>Name (A - Z)</option>
                                }
                                else
                                {
                                    <option value="NameAsc">Name (A - Z)</option>
                                }

                                @if (Context.Request.Query["sort"] == "NameDesc")
                                {
                                    <option value="NameDesc" selected>Name (Z - A)</option>
                                }
                                else
                                {
                                    <option value="NameDesc">Name (Z - A)</option>
                                }

                                @if (Context.Request.Query["sort"] == "PriceLowHigh")
                                {
                                    <option value="PriceLowHigh" selected>Price (Low-High)</option>
                                }
                                else
                                {
                                    <option value="PriceLowHigh">Price (Low-High)</option>
                                }

                                @if (Context.Request.Query["sort"] == "PriceHighLow")
                                {
                                    <option value="PriceHighLow" selected>Price (High-Low)</option>
                                }
                                else
                                {
                                    <option value="PriceHighLow">Price (High-Low)</option>
                                }

                                @if (Context.Request.Query["sort"] == "RatingHigh")
                                {
                                    <option value="RatingHigh" selected>Rating (Highest)</option>
                                }
                                else
                                {
                                    <option value="RatingHigh">Rating (Highest)</option>
                                }

                                @if (Context.Request.Query["sort"] == "RatingLow")
                                {
                                    <option value="RatingLow" selected>Rating (Lowest)</option>
                                }
                                else
                                {
                                    <option value="RatingLow">Rating (Lowest)</option>
                                }

                            </select>
                        </form>
                    </div>


                </div>
                <div class="row product-content product-store">
                    @foreach(var book in Model)
                    {
                        <div class="col-lg-3 col-md-4 mb-4">
                            <div class="card position-relative p-4 border rounded-3">
                                <div class="position-absolute">
                                    <p class="bg-primary py-1 px-3 fs-6 text-white rounded-2">10% off</p>
                                </div>
                                <img src="~/@book.ImageBookCoverPath" class="img-fluid shadow-sm" alt="product item">
                                <h6 class="mt-4 mb-0 fw-bold"><a href="details.html">@book.Title</a></h6>
                                <div class="review-content d-flex">
                                    <p class="my-2 me-2 fs-6 text-black-50">@book.Author</p>

                                    <div class="rating text-warning d-flex align-items-center">
                                        <svg class="star star-fill">
                                            <use xlink:href="#star-fill"></use>
                                        </svg>
                                        <svg class="star star-fill">
                                            <use xlink:href="#star-fill"></use>
                                        </svg>
                                        <svg class="star star-fill">
                                            <use xlink:href="#star-fill"></use>
                                        </svg>
                                        <svg class="star star-fill">
                                            <use xlink:href="#star-fill"></use>
                                        </svg>
                                        <svg class="star star-fill">
                                            <use xlink:href="#star-fill"></use>
                                        </svg>
                                    </div>
                                </div>

                                <span class="price text-primary fw-bold mb-2 fs-5">Physical : $@book.PricePhysical</span>
                                @if(book.PricePdf != null)
                                {
                                    <span class="price text-primary fw-bold mb-2 fs-5">PDF : $@book.PricePdf</span>

                                }
                                @if (book.PricePDFPerDay != null)
                                {
                                    <span class="price text-primary fw-bold mb-2 fs-5">Price Per Dat : $@book.PricePDFPerDay</span>

                                }
                                @if (book.PricePdf == null)
                                {
                                    <span class="price text-primary fw-bold mb-2 fs-5">PDF : $0</span>

                                }
                                @if (book.PricePDFPerDay == null)
                                {
                                    <span class="price text-primary fw-bold mb-2 fs-5">Price Per Dat : $0</span>

                                }
                                <div class="card-concern position-absolute start-0 end-0 d-flex gap-2">
                                    <button type="button" href="#" class="btn btn-dark" data-bs-toggle="tooltip" data-bs-placement="top"
                                            data-bs-title="Tooltip on top">
                                        <svg class="cart">
                                            <use xlink:href="#cart"></use>
                                        </svg>
                                    </button>
                                    <a href="#" class="btn btn-dark">
                                        <span>
                                            <svg class="wishlist">
                                                <use xlink:href="#heart"></use>
                                            </svg>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <nav class="py-5" aria-label="Page navigation">
                    <ul class="pagination justify-content-center gap-4">
                        <li class="page-item disabled">
                            <a class="page-link">Prev</a>
                        </li>
                        <li class="page-item active" aria-current="page">
                            <span class="page-link">1</span>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </main>
            <aside class="col-md-3">
                <div class="sidebar ps-lg-5">
                    <div class="widget-menu">
                        <div class="widget-search-bar">
                            <form class="d-flex border rounded-3 p-2" role="search">
                                <input class="form-control border-0 me-2 py-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn rounded-3 p-3 d-flex align-items-center" type="submit">
                                    <svg class="search text-light" width="18" height="18">
                                        <use xlink:href="#search"></use>
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="widget-product-categories pt-5">
                        <div class="section-title overflow-hidden mb-2">
                            <h3 class="d-flex flex-column mb-0">Categories</h3>
                        </div>
                        <ul class="product-categories mb-0 sidebar-list list-unstyled">
                            <li class="cat-item">
                                <a href="/Book/allbooks">All</a>
                            </li>
                            @foreach (var category in ViewBag.Categories as IEnumerable<Digital_Library.Core.Models.Category>)
                            {
                                <li class="cat-item">
                                    <a href="/Book/allbooks?category=@category.Id">@category.CategoryName</a>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="widget-product-authur pt-5">
                        <div class="section-title overflow-hidden mb-2">
                            <h3 class="d-flex flex-column mb-0">Authors</h3>
                        </div>
                        <ul class="product-tags mb-0 sidebar-list list-unstyled">
                            @foreach (var author in ViewBag.Authors as IEnumerable<string>)
                            {
                                <li class="tags-item">
                                    <a href="/Book/allbooks?author=@author">@author</a>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="widget-price-filter pt-5">
                        <div class="section-title overflow-hidden mb-2">
                            <h3 class="d-flex flex-column mb-0">Filter by price</h3>
                        </div>
                        <ul class="product-tags mb-0 sidebar-list list-unstyled">
                            <li class="tags-item">
                                <a href="/Book/allbooks?priceRange=0-10">Less than $10</a>
                            </li>
                            <li class="tags-item">
                                <a href="/Book/allbooks?priceRange=10-20">$10 - $20</a>
                            </li>
                            <li class="tags-item">
                                <a href="/Book/allbooks?priceRange=20-30">$20 - $30</a>
                            </li>
                            <li class="tags-item">
                                <a href="/Book/allbooks?priceRange=30-40">$30 - $40</a>
                            </li>
                            <li class="tags-item">
                                <a href="/Book/allbooks?priceRange=40-50">$40 - $50</a>
                            </li>
                        </ul>
                    </div>

                </div>
            </aside>
        </div>
    </div>
</div>

