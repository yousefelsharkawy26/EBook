@{
 ViewData["Title"] = "View PDF";
}

<div class="container my-5">
 <h3 class="mb-4">📖 PDF Viewer</h3>

 @if (ViewBag.PdfPath != null)
 {
  <div class="ratio ratio-16x9 shadow-sm">
   <iframe src="~/@ViewBag.PdfPath" width="100%" height="600px" frameborder="0">
    This browser does not support PDFs.
    <a href="~/@ViewBag.PdfPath">Download PDF</a>.
   </iframe>
  </div>
 }
 else
 {
  <div class="alert alert-danger">PDF not found.</div>
 }

 <a asp-action="Index" asp-controller="Book" class="btn btn-secondary mt-3">Back to My Books</a>
</div>
