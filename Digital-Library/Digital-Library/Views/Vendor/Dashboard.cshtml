@model Digital_Library.Core.Models.Vendor

@{
 ViewData["Title"] = "Vendor Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 <title>@ViewData["Title"]</title>

 <!-- FontAwesome -->
 <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

 <style>
  body {
   margin: 0;
   padding: 0;
   font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
   background-color: #f0f2f5;
  }

  .dashboard-container {
   max-width: 900px;
   margin: 50px auto;
   text-align: center;
  }

  .vendor-logo {
   width: 120px;
   height: 120px;
   object-fit: cover;
   border-radius: 50%;
   box-shadow: 0 5px 20px rgba(0,0,0,0.15);
  }

  .vendor-name {
   font-size: 28px;
   font-weight: bold;
   margin: 15px 0 5px 0;
  }

  .vendor-location {
   color: #6c757d;
   font-size: 14px;
  }

  .stats-row {
   display: flex;
   justify-content: space-between;
   margin: 40px 0;
   gap: 20px;
  }

  .stat-card {
   flex: 1;
   background-color: #ffffff;
   padding: 20px;
   border-radius: 15px;
   box-shadow: 0 5px 20px rgba(0,0,0,0.1);
   transition: all 0.3s ease;
  }

   .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 25px rgba(0,0,0,0.15);
   }

  .stat-icon {
   font-size: 30px;
   margin-bottom: 10px;
  }

  .stat-title {
   color: #6c757d;
   text-transform: uppercase;
   font-size: 12px;
   margin-bottom: 5px;
  }

  .stat-value {
   font-size: 22px;
   font-weight: bold;
  }

  .actions-row {
   display: flex;
   gap: 20px;
   margin-top: 40px;
  }

  .action-btn {
   flex: 1;
   padding: 15px 0;
   font-weight: bold;
   font-size: 16px;
   border: none;
   border-radius: 12px;
   cursor: pointer;
   color: #fff;
   transition: transform 0.2s;
  }

   .action-btn:hover {
    transform: scale(1.05);
   }

  .btn-edit {
   background-color: #0d6efd;
  }

  .btn-books {
   background-color: #198754;
  }

  .btn-orders {
   background-color: #0dcaf0;
  }

   .btn-edit i, .btn-books i, .btn-orders i {
    margin-right: 8px;
   }

  a.action-btn {
   text-decoration: none;
   display: inline-block;
   text-align: center;
  }
 </style>
</head>
<body>
 <div class="dashboard-container">

  <!-- Logo and Info -->
  <img src="~/@Model.LibraryLogoUrl" class="vendor-logo" alt="Library Logo" />
  <div class="vendor-name">@Model.LibraryName</div>
  <div class="vendor-location">@Model.City, @Model.State</div>

  <!-- Statistics -->
  <div class="stats-row">
   <div class="stat-card">
    <i class="fas fa-wallet stat-icon" style="color:#0d6efd;"></i>
    <div class="stat-title">Wallet Balance</div>
    <div class="stat-value">$@Model.WalletBalance.ToString("F2")</div>
   </div>
   <div class="stat-card">
    <i class="fas fa-info-circle stat-icon" style="color:#ffc107;"></i>
    <div class="stat-title">Status</div>
    <div class="stat-value">@Model.Status</div>
   </div>
   <div class="stat-card">
    <i class="fas fa-book stat-icon" style="color:#198754;"></i>
    <div class="stat-title">Books</div>
    <div class="stat-value">@Model.Books?.Count()</div>
   </div>
  </div>

  <!-- Actions -->
  <div class="actions-row">
   <a asp-action="EditLibraryProfile" asp-controller="Vendor" class="action-btn btn-edit">
    <i class="fas fa-edit"></i> Edit Library Info
   </a>
   <a asp-action="Index" asp-controller="Book" class="action-btn btn-books">
    <i class="fas fa-book"></i> My Books
   </a>
   <a asp-action="MyOrders" asp-controller="Orders" class="action-btn btn-orders">
    <i class="fas fa-shopping-bag"></i> My Library Orders
   </a>
  </div>

 </div>
</body>
</html>
