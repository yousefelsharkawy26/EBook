@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout"; // Assuming you have a _Layout.cshtml that includes your header/footer
}
<link href="~/css/login.css" rel="stylesheet" />


<div class="login-wrapper">
    <div class="login-card">
        <h2 class="text-center">Login</h2>
        <p class="subtitle text-center">Please enter your email and password!</p>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <form asp-action="Login" method="post">
            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label visually-hidden">Email</label>
                <input asp-for="Email" class="form-control form-control-custom" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-4">
                <label asp-for="Password" class="form-label visually-hidden">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-custom" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me + Forgot Password -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" id="rememberMeCheck" />
                    <label class="form-check-label" for="rememberMeCheck">Remember me</label>
                </div>
                <a asp-controller="Auth" asp-action="ForgetPassword" class="text-link">Forgot password?</a>
            </div>

            <!-- Login Button -->
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-login">Login</button>
            </div>

            <!-- Register -->
            <p class="text-center mb-0">
                Don’t have an account?
                <a asp-controller="Auth" asp-action="Register" class="text-link fw-bold">Sign Up</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}