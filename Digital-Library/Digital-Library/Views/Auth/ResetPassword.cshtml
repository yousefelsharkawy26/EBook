@model Digital_Library.Core.ViewModels.Requests.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}
<link href="~/css/ResetPassword.css" rel="stylesheet" />

<div class="reset-wrapper">
    <div class="reset-card">
        <h3>Reset Password</h3>

        <form asp-action="ResetPassword" method="post">
            @Html.AntiForgeryToken()

            <!-- Validation summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hidden fields for UserId & Token -->
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Token" />

            <!-- New Password -->
            <div class="mb-3">
                <input asp-for="NewPassword" class="form-control-reset" placeholder="New Password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <input asp-for="ConfirmPassword" class="form-control-reset" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-reset">Reset Password</button>
        </form>
        <div class="links">
            <a asp-controller="Auth" asp-action="Login">Back to Login</a>
            <a asp-controller="Auth" asp-action="Register">Create Account</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
