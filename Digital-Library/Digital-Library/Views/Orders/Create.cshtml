@model List<Digital_Library.Core.Models.OrderDetail>
@{
    ViewData["Title"] = "Create Order";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0">➕ Create Order</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label class="form-label">Book ID</label>
                    <input type="text" name="[0].BookId" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Format</label>
                    <select name="[0].FormatType" class="form-select">
                        <option value="0">PDF</option>
                        <option value="1">EPUB</option>
                        <option value="2">Print</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input type="number" step="0.01" name="[0].Price" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input type="number" name="[0].Quantity" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success">✅ Place Order</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>


